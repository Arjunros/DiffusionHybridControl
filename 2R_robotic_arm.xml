<mujoco model="2R_robotic_arm">
    <compiler angle="degree" coordinate="local"/>
    <option timestep="0.01" gravity="0 0 -9.81" integrator="RK4"/>

    <default>
        <joint damping="0.1" armature="0.0001" limited="true"/>
        <geom type="capsule" rgba="0.3 0.5 0.8 1" friction="1 0.1 0.1"/>
        <motor ctrllimited="true" ctrlrange="-10 10"/>
    </default>

    <worldbody>
        <body name="base" pos="0 0 0">
            <geom name="ground" type="plane" size="1 1 0.1" rgba="0.7 0.7 0.7 1"/>

            <!-- Link 1 -->
            <body name="link1" pos="0 0 0">
                <joint name="joint1" type="hinge" axis="0 0 1" range="-90 90"/>
                <geom fromto="0 0 0 0.3 0 0" size="0.02" mass="0.2"/>

                <!-- Link 2 -->
                <body name="link2" pos="0.3 0 0">
                    <joint name="joint2" type="hinge" axis="0 0 1" range="-90 90"/>
                    <geom fromto="0 0 0 0.3 0 0" size="0.02" mass="0.15"/>

                    <!-- End-effector -->
                    <body name="ee" pos="0.3 0 0">
                        <geom name="end_effector" type="sphere" size="0.03" rgba="0.9 0.3 0.3 1"/>
                    </body>
                </body>
            </body>
        </body>
    </worldbody>

    <actuator>
        <!-- Increased gear values for visible motion -->
        <motor name="motor1" joint="joint1" gear="200"/>
        <motor name="motor2" joint="joint2" gear="200"/>
    </actuator>
</mujoco>
